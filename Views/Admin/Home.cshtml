@model Project.Models.Admin.AdminHomeViewModel

@{
    ViewData["Title"] = "Trang chủ Quản trị viên";
}

<div class="container-fluid">
    <!-- Thanh ngang trên cùng -->
    <div class="row bg-primary text-white py-2">
        <div class="col-md-10">
            <h4 class="ms-3">Xin chào Quản trị viên @Model.HoTen</h4>
        </div>
        <div class="col-md-2 text-end">
            <a href="/Home/DangXuat" class="btn btn-light btn-sm me-3">Đăng xuất</a>
        </div>
    </div>

    <div class="row">
        <!-- Thanh chức năng bên trái -->
        <div class="col-md-3 bg-light vh-100">
            <h5 class="mt-3">Chức năng</h5>
            <ul class="list-group">
                <li class="list-group-item">
                    <a href="/Admin/Home" class="text-decoration-none">Home</a>
                </li>
                <li class="list-group-item">
                    <a href="/Admin/QuanLyNguoiDung" class="text-decoration-none">Quản lý người dùng</a>
                </li>
                <li class="list-group-item">
                    <a href="/Admin/QuanLyMayTinh" class="text-decoration-none">Quản lý máy tính</a>
                </li>
                <li class="list-group-item">
                    <a href="#" class="text-decoration-none" data-bs-toggle="collapse" data-bs-target="#thongKeSubMenu" aria-expanded="false" aria-controls="thongKeSubMenu">
                        Thống kê doanh thu
                    </a>
                    <ul class="collapse list-group ms-3" id="thongKeSubMenu">
                        <li class="list-group-item">
                            <a href="/Admin/ThongKeTheoThoiGian" class="text-decoration-none">Theo thời gian</a>
                        </li>
                        <li class="list-group-item">
                            <a href="/Admin/ThongKeTheoMay" class="text-decoration-none">Theo máy</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        
        <!-- Nội dung chính -->
        <div class="col-md-9">
            <div class="container mt-4">
                <div class="row g-4">
                    <!-- Hàng 1 -->
                    <div class="col-md-6">
                        <div class="card text-center shadow-sm border-0 rounded-3 card-large bg-lightblue">
                            <div class="card-body">
                                <h5 class="card-title text-primary fs-4">Khách hàng</h5>
                                <p class="card-text fs-1 fw-bold">@Model.SoNguoiDung</p>
                            </div>
                        </div>
                    </div>
        
                    <div class="col-md-6">
                        <div class="card text-center shadow-sm border-0 rounded-3 card-large bg-lightgreen">
                            <div class="card-body">
                                <h5 class="card-title text-success fs-4">Quản trị viên</h5>
                                <p class="card-text fs-1 fw-bold">@Model.SoQuanTriVien</p>
                            </div>
                        </div>
                    </div>
        
                    <!-- Hàng 2 -->
                    <div class="col-md-6">
                        <div class="card text-center shadow-sm border-0 rounded-3 card-large bg-lightyellow">
                            <div class="card-body">
                                <h5 class="card-title text-warning fs-4">Máy tính</h5>
                                <p class="card-text fs-1 fw-bold">@Model.SoMayTinh</p>
                            </div>
                        </div>
                    </div>
        
                    <div class="col-md-6">
                        <div class="card text-center shadow-sm border-0 rounded-3 card-large bg-lightred">
                            <div class="card-body">
                                <h5 class="card-title text-danger fs-4">Doanh thu</h5>
                                <p class="card-text fs-1 fw-bold">@Model.TongDoanhThu VNĐ</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-lightblue {
        background-color: #cce5ff; /* Màu xanh nhạt */
    }
    .bg-lightgreen {
        background-color: #d4edda; /* Màu xanh lá nhạt */
    }
    .bg-lightyellow {
        background-color: #fff3cd; /* Màu vàng nhạt */
    }
    .bg-lightred {
        background-color: #f8d7da; /* Màu đỏ nhạt */
    }
    .card-large {
        height: 250px; /* Tăng chiều cao */
    }
    .card-large .card-body {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
</style>