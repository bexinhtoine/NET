@model Project.Models.KhachHang.SoDuViewModel

@{
    ViewData["Title"] = "Số dư";
}

<div class="container-fluid mt-4">
    <!-- Thanh ngang trên cùng -->
    <div class="row bg-primary text-white py-2">
        <div class="col-md-10">
            <h4 class="ms-3">Chào mừng quý khách <strong>@Model.HoTen</strong> đến với quán NET "Thiên Đường"</h4>
        </div>
        <div class="col-md-2 text-end">
            <a href="/Home/DangXuat" class="btn btn-light btn-sm me-3">Đăng xuất</a>
        </div>
    </div>

    <div class="row mt-3">
        <!-- Thanh chức năng bên trái -->
        <div class="col-md-3 bg-light vh-100">
            <h5 class="mt-3">Chức năng</h5>
            <ul class="list-group">
                <li class="list-group-item">
                    <a href="/KhachHang/Home" class="text-decoration-none">Home</a>
                </li>
                <li class="list-group-item">
                    <a href="/KhachHang/LichSu" class="text-decoration-none">Xem lịch sử sử dụng</a>
                </li>
                <li class="list-group-item">
                    <a href="/KhachHang/SoDu" class="text-decoration-none">Số dư</a>
                </li>
                <li class="list-group-item">
                    <a href="/KhachHang/ThayDoiThongTinCaNhan" class="text-decoration-none">Thay đổi thông tin cá nhân</a>
                </li>
                <li class="list-group-item">
                    <a href="/KhachHang/HoTro" class="text-decoration-none">Liên hệ hỗ trợ</a>
                </li>
            </ul>
        </div>

        <!-- Nội dung chính -->
        <div class="col-md-9">
            <!-- Hiển thị số dư -->
            <div class="card mb-3">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Số dư tài khoản</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info text-center" role="alert">
                        <h5>Số dư hiện tại của bạn là:</h5>
                        <h3 class="text-primary"><strong>@Model.SoDu.ToString("C")</strong></h3>
                    </div>
                </div>
            </div>

            <!-- Thông tin nạp tiền -->
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Thông tin nạp tiền</h4>
                </div>
                <div class="card-body">
                    <p><strong>Ngân hàng:</strong> BIDV</p>
                    <p><strong>Số tài khoản:</strong> 0123456789</p>
                    <p><strong>Chủ tài khoản:</strong> Quán NET Thiên Đường</p>
                    <div class="text-center">
                        <img src="/images/maqr.png" alt="QR Code" class="img-fluid" style="max-width: 200px;">
                    </div>
                </div>
            </div>

            <!-- Form nạp tiền -->
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Xác nhận nạp tiền</h4>
                </div>
                <div class="card-body">
                    <form asp-action="NapTien" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <div class="mb-3">
                                <label for="soTien" class="form-label">Số tiền nạp (VNĐ):</label>
                                <input asp-for="SoTien" class="form-control form-control-lg" id="soTien" placeholder="Nhập số tiền cần nạp" min="10000" step="1000" required>
                                <div class="text-danger mt-2">
                                    <span asp-validation-for="SoTien"></span>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-wallet2"></i> Xác nhận nạp tiền
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>