@model Project.Models.KhachHang.ThayDoiThongTinCaNhanViewModel

@{
    ViewData["Title"] = "Thay đổi thông tin cá nhân";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Thay đổi thông tin cá nhân</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success text-center">
                            @TempData["Success"]
                        </div>
                    }

                    <form asp-action="ThayDoiThongTinCaNhan" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Họ tên -->
                        <div class="mb-3">
                            <label for="hoTen" class="form-label">Họ tên:</label>
                            <input asp-for="HoTen" class="form-control" id="hoTen" required>
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>

                        <!-- Tên đăng nhập -->
                        <div class="mb-3">
                            <label for="tenDangNhap" class="form-label">Tên đăng nhập:</label>
                            <input asp-for="TenDangNhap" class="form-control" id="tenDangNhap" readonly>
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>

                        <!-- Số điện thoại -->
                        <div class="mb-3">
                            <label for="soDienThoai" class="form-label">Số điện thoại:</label>
                            <input asp-for="SoDienThoai" class="form-control" id="soDienThoai" required>
                            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                        </div>
                        
                        <!-- Mật khẩu hiện tại -->
                        <div class="mb-3">
                            <label for="matKhauHienTai" class="form-label">Mật khẩu hiện tại:</label>
                            <input asp-for="MatKhauHienTai" type="password" class="form-control" id="matKhauHienTai" required>
                            <span asp-validation-for="MatKhauHienTai" class="text-danger"></span>
                        </div>

                        <!-- Mật khẩu mới -->
                        <div class="mb-3">
                            <label for="matKhauMoi" class="form-label">Mật khẩu mới (nếu muốn thay đổi):</label>
                            <input asp-for="MatKhauMoi" type="password" class="form-control" id="matKhauMoi">
                            <span asp-validation-for="MatKhauMoi" class="text-danger"></span>
                        </div>

                        <!-- Xác nhận mật khẩu mới -->
                        <div class="mb-3">
                            <label for="xacNhanMatKhauMoi" class="form-label">Xác nhận mật khẩu mới:</label>
                            <input asp-for="XacNhanMatKhauMoi" type="password" class="form-control" id="xacNhanMatKhauMoi">
                            <span asp-validation-for="XacNhanMatKhauMoi" class="text-danger"></span>
                        </div>

                        <!-- Nút hành động -->
                        <div class="d-flex justify-content-between">
                            <a href="/KhachHang/Home" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Cập nhật thông tin
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>